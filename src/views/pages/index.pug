      div
        img(src="../../assets/images/video-cover.jpg", alt="точки", class="main_video_cover")
        img(src="../../assets/images/dots.svg", alt="точки", class="main_video_dots")
        img(src="../../assets/images/dots.svg", alt="точки2", class="main_video_dots2")
        img(src="../../assets/images/Blob.svg", alt="точки2", class="main_video_blob")
